<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6E866"
    android:orientation="vertical"
    android:padding="26dp"
    app:layout_insetEdge="top">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#E8BE40"
            app:navigationIcon="@drawable/ic_launcher_foreground" />

    </com.google.android.material.appbar.AppBarLayout>

    <Button
        android:id="@+id/btnAddBook"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Add Book" />

    <Button
        android:id="@+id/btnViewBooks"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="View Books" />

    <Button
        android:id="@+id/btnDeleteBook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Delete Book" />

    <Button
        android:id="@+id/btnPublisherDetails"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="Publisher Details" />

    <Button
        android:id="@+id/btnAuthorDetails"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Author Details" />

    <Button
        android:id="@+id/btnMemberDetails"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="Member Details" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:background="#FFC107"
        android:text="World Of Books: Library Management System"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</LinearLayout>

